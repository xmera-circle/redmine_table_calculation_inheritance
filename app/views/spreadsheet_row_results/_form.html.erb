<%= error_messages_for 'spreadsheet_row_result' %>

<%= tag.div class: 'box tabular settings' do %>
  <%= tag.legend l(:label_spreadsheet_row_result, value: @spreadsheet_row_result.calculation.name) %>
  <%= fields :spreadsheet_row_result do |field| %>
    <%= field.hidden_field :spreadsheet_id %>
    <% @spreadsheet_row_result.custom_field_values.each do |value| %>
      <% if @spreadsheet_row_result.calculation.field_ids.include? value.custom_field_id %>
        <%= tag.p custom_field_tag_with_label :spreadsheet_row_result, value %>
      <% end %>
    <% end %>
    <%= tag.p f.text_field :comment, required: true %>
    <%= f.hidden_field :calculation_id %>
  <% end %>
<% end %>
